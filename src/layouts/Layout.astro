---
import './src/styles/global.css' 
const { title = "Rainbow Code" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-transparent">

    <!-- Fondo de la pÃ¡gina -->
    <div class="absolute inset-0 bg-[url('/src/public/fondo_astro_1.jpg')] bg-cover bg-center h-full z-0"></div>

    <!-- Navbar -->
    <nav class="flex items-center justify-between px-8 py-4 backdrop-blur-md bg-gray-900/50 text-white sticky top-4 z-50 rounded-xl shadow-xl max-w-7xl mx-auto">
      <a href="/" class="text-2xl font-bold text-white">Rainbow Code</a>
      <ul class="flex gap-6 text-white font-medium">
        <li><a href="#servicios" class="hover:text-violet-600">Inicio</a></li>
        <li><a href="#proceso" class="hover:text-violet-600">Nosotros</a></li>
        <li><a href="#contacto" class="hover:text-violet-600">Servicios</a></li>
        <li><a href="#contacto" class="hover:text-violet-600">Portafolios</a></li>
        <li><a href="#contacto" class="hover:text-violet-600">Contacto</a></li>
      </ul>
    </nav>

    <!-- Contenido principal -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white text-center py-4 mt-12">
      <p>&copy; 2025 Rainbow Code. Todos los derechos reservados.</p>
    </footer>
    
  </body>
</html>
